APP_NAME="CharyMeld Adverts"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_ARTISAN
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Force HTTPS (Set to true in production)
FORCE_HTTPS=true

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=charymeld_adverts
DB_USERNAME=root
DB_PASSWORD=

# Cache & Session (Use Redis in production)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Paystack Configuration
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxx
PAYSTACK_WEBHOOK_URL=https://yourdomain.com/webhook/paystack

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxxxxxxxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK-xxxxxxxxxxxxx
FLUTTERWAVE_SECRET_HASH=your_webhook_secret_hash
FLUTTERWAVE_WEBHOOK_URL=https://yourdomain.com/webhook/flutterwave

# Publisher Platform Settings
PUBLISHER_REVENUE_SHARE=70
PUBLISHER_MIN_PAYOUT=5000

# Security
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# SEO & Search Engine Verification
# Get these from Google Search Console and Bing Webmaster Tools
GOOGLE_SITE_VERIFICATION=
BING_SITE_VERIFICATION=
SEO_ALLOW_INDEXING=true

# Social Media
TWITTER_HANDLE=@charymeld
FACEBOOK_APP_ID=
